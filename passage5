<body>
  <div id="game-container">
    <h1>FORCE LOGIC GRID</h1>
    <p>DEDUCE 3-LETTER CODE (A-D):</p>
    <ul>
      <li>No letter repeats.</li>
      <li>First letter is after B in alphabet.</li>
      <li>Second letter is not A.</li>
      <li>Third letter is before D.</li>
    </ul>
    <div>
      <input type="text" id="letter1" placeholder="1st" maxlength="1">
      <input type="text" id="letter2" placeholder="2nd" maxlength="1">
      <input type="text" id="letter3" placeholder="3rd" maxlength="1">
    </div>
    <button onclick="checkAnswer()">SUBMIT</button>
    <div id="result"></div>
  </div>
  <script>
    function checkAnswer() {
      const l1 = document.getElementById('letter1').value.toUpperCase();
      const l2 = document.getElementById('letter2').value.toUpperCase();
      const l3 = document.getElementById('letter3').value.toUpperCase();
      const resultDiv = document.getElementById('result');
      if (l1 !== l2 && l1 !== l3 && l2 !== l3 && l1 > 'B' && l2 !== 'A' && l3 < 'D' && 'A B C D'.includes(l1 + l2 + l3)) {
        resultDiv.innerHTML = 'CODE UNLOCKED. PASSWORD: <strong>FORCEGRID</strong>';
        resultDiv.style.color = '#00ff00';
      } else {
        resultDiv.innerHTML = 'CODE LOCKED. REASSESS CLUES.';
        resultDiv.style.color = '#ff0000';
      }
    }
  </script>
